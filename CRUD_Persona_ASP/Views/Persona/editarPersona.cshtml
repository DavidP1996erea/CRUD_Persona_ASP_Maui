@{
    // Se recoge el model
    @model CRUD_Persona_ASP.Models.ViewModel.editarPersonaVM

}

<!-- Se crea un formulario para poder recoger los datos para editar la persona -->
<form method="post">

<input name="Nombre" value="@Model.PersonaDatos.Nombre"> </input>
<input name="Apellidos" value="@Model.PersonaDatos.Apellidos"></input>
<input name="Direccion" value="@Model.PersonaDatos.Direccion"> </input>
<input name="Telefono" value="@Model.PersonaDatos.Telefono"> </input>
<input name="Foto" value="@Model.PersonaDatos.Foto"> </input>
<input name="FechaNacimiento" value="@Model.PersonaDatos.FechaNacimiento"> </input>

<!-- Se crea un select con un bucle dentro para poder mostrar todos los departamentos -->
<select id="IDDepartamento" name="IDDepartamento">
    @{
        for(int i =0; i< Model.ListadoDepartamentos.Count(); i++)
        {
                <option value=@Model.ListadoDepartamentos[i].ID> @Model.ListadoDepartamentos[i].Nombre </option>
        }
    }

</select>

<input type="submit" />
</form>