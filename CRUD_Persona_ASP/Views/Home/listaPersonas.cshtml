@model IEnumerable<CRUD_Persona_ASP.Models.clsPersonasConNombreDepartamento>

@{
    ViewData["Title"] = "listaPersonas";
}

<h1>listaPersonas</h1>

<p>
    <a asp-action="insertarPersona" asp-controller="Persona">Insertar persona</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreDepartamento)
                </td>
            <td>
                @Html.ActionLink("Editar", "editarPersona", "Persona", new {  id=item.ID }) | 
                @Html.ActionLink("Borrar", "borrarPersona", "Persona", new {  id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
